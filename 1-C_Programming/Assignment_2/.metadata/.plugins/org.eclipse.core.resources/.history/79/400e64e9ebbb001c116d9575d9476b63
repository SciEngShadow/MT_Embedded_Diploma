#include<stdio.h>
int main()
{
	int num;

	printf("Enter Number:");
	fflush(stdin);fflush(stdout);
	scanf("%f",&num1);

	printf("Fibonnaci = %d",fibonacci(num));

}

int fibonacci(int num)
{
	if(num==0||num==1)
		return 0;
	else
		return fibonacci(num-1)+fibonacci(num-2);
}
