#include<stdio.h>

int main()
{
	int num;

	printf("Enter Your Positive Number:");
	fflush(stdin);fflush(stdout);
	scanf("%d",&num);
	while(num<=0)
	{
		printf("Enter Your Positive Number:");
		fflush(stdin);fflush(stdout);
		scanf("%d",&num);
	}


}
