 * Description: program to display a full pyramid using stars pattern.
 ***************************************************************************************************/
#include<stdio.h>

int main()
{
	int row=0;

	printf("enter no. of rows:");
	fflush(stdin);fflush(stdout);
	scanf("%d",&row);


	for(int i=1;i<=row;i++)
	{
		for(int j=0;j<(2*i+1);j++)
			printf("*");
		for(int j=0;j<row-1;j++)
			print(" ");

	}

	return 0;
}
