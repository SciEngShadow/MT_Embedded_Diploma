 * Description:  a program that takes three integers, and prints out the smallest number
 ***************************************************************************************************/
#include<stdio.h>

int main()
{
	int num1,num2,num3;

	printf("Enter Num1:");
	fflush(stdin);fflush(stdout);
	scanf("%d",&num1);

	printf("Enter Num2:");
	fflush(stdin);fflush(stdout);
	scanf("%d",&num2);

	printf("Enter Num3:");
	fflush(stdin);fflush(stdout);
	scanf("%d",&num3);

	if(num1<num2)
	{
		if(num1<num3)
			printf("%d is the smallest",num1);
		else if(num3<num1)
			printf("%d is the smallest",num3);
		else
			printf("%d is the smallest",num2);
	}


	return 0;
}
